<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Primeiro Exercício</title>
</head>
<body>
    <script>
        var num = parseFloat(prompt("Digite um número"));

        var mensagem = "O número não é maior que 20, portanto esse número é: " + num;
        if (num > 20) {
            mensagem = "Esse número é maior que 20, sua metade é: " + (num / 2);
        }
        alert(mensagem);
    </script>
</body>
</html>
